  a owl:Ontology ;
  dcterms:title "Hydrogen Hazard Ontology (H2HO)"@en ;
  rdfs:comment "Hydrogen Safety Ontology (H2HO). A domain-specific extension of HO61508 for the hydrogen sector, following the modular structure described in 'A Modular Hazard Ontology Based on IEC 61508'."@en ;
  dcterms:creator "Thorvaldur Jochumsson" ;
  dcterms:contributor "Kaj Hänninen" ;
  dcterms:contributor "Mehrdad Saadatmand" ;
  dcterms:contributor "Kristina Lundqvist" ;
